#
# JSON Logging Test Configuration
# Demonstrates various JSON logging configurations for testing
#

# Root logger level
log4rich.rootLevel=DEBUG

# Console logging (disabled for cleaner test output)
log4rich.console.enabled=false

# File logging
log4rich.file.enabled=true
log4rich.file.path=logs/test-application.log
log4rich.file.maxSize=5M
log4rich.file.maxBackups=3

# JSON Layout Configuration
log4rich.json.enabled=true
log4rich.json.prettyPrint=false
log4rich.json.includeLocation=true
log4rich.json.includeThread=true
log4rich.json.timestampFormat=yyyy-MM-dd'T'HH:mm:ss.SSSXXX

# Performance settings for testing
log4rich.performance.batchEnabled=false
log4rich.location.capture=true

# Logger-specific levels for testing
log4rich.logger.JsonBasicTest=INFO
log4rich.logger.LayoutComparison=DEBUG
log4rich.logger.StructuredDataTest=INFO
log4rich.logger.ExceptionTest=ERROR
log4rich.logger.StandardPerf=INFO
log4rich.logger.JsonPerf=INFO
log4rich.logger.MultiThreadTest=DEBUG
log4rich.logger.MinimalTest=INFO
log4rich.logger.ProductionTest=INFO
log4rich.logger.DevelopmentTest=DEBUG
log4rich.logger.CustomTimestampTest=INFO